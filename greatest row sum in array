#include <stdio.h>
main() 
{
  int i, j, row, col, l = 0, rowSum;
  int a[10][10];
  printf("Enter the number of rows: ");
  scanf("%d", &row);
  printf("Enter the number of columns: ");
  scanf("%d", &col);
  printf("Enter Matrix Elements: ");
  for(i = 0; i < row; i++)
  {
    for(j = 0; j < col; j++)
    {
      scanf("%d", &a[i][j]);
    }
  }
  for(i = 0; i < row; i++)
  {
    for(j = 0; j < col; j++)
    {
      printf("%4d", a[i][j]);
    }
    printf("\n");
  }
  for(i = 0; i < row; i++)
  {
    rowSum = 0;
    for(j = 0; j < col; j++)
    {
      rowSum = rowSum + a[i][j];
    }
    if (rowSum > l)
    {
      l = rowSum;
    }
  }
  printf("\nGreatest row sum is = %d", l);
}






