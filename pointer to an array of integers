#include<stdio.h>
#include<conio.h>

main() {
  int i;
  int * ptr;
  int arr[5] = {
    10,
    20,
    30,
    40,
    50
  };
  // Initialize array with the base address
  ptr = arr;

  for (i = 0; i < 5; i++) {
    printf("'arr[%d]' is stored in %u\n", i, ptr);
    printf("The value of arr[%d] is %d\n", i, * ptr);
    ptr++;
  }
  getch();
}
